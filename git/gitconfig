#?install ~/.gitconfig
#
# gitconfig - Configuration for git
#

<? run_parts("*.gitconfig"); ?>

[color]
	ui = auto
[core]
	excludesfile = ~/.config/git/ignore
[status]
	showuntrackedfiles = no
[alias]
	uncommit = reset --soft HEAD^
	whoami = !git var GIT_COMMITTER_IDENT | sed 's/[-0-9 ]*$//'
[push]
	default = simple
